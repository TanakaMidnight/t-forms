rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // フォーム本体: 自分のものだけ読み書き可
    match /forms/{formId} {
      allow read: if true;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.ownerUid;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.ownerUid &&
        (request.resource.data.questions is list && request.resource.data.questions.size() > 0);
    }
    // 回答: フォーム作成者のみ閲覧可、誰でも作成可
    match /responses/{responseId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.formOwnerUid;
    }
  }
}
